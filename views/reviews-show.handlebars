<a href="/movies/{{review.movieId}}">Back to {{review.movieTitle}}</a>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>{{review.title}}</h1>
    <p class="text-muted">Created on: {{review.createdAt}}</p>
    <h2>{{review.movieTitle}}</h2>
    <p>{{review.description}}</p>
    <p>{{review.rating}}</p>
    <p><a href="/movies/{{review.movieId}}/reviews/{{review._id}}/edit">Edit</a></p>
    <p><form method="POST" action="/movies/{{review.movieId}}/reviews/{{review._id}}?_method=DELETE">
        <button class="btn btn-primary" type="submit">Delete</button>
    </form></p>
    <br>
    <hr>
    <br> 
    {{> comment-form}}
    <br>
    <div id="comments">
      {{#each comments}}
        {{> comment comment=this movieId=../review.movieId}}
      {{/each}}
    </div>

  </div>
</div>