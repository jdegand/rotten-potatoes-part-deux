<div class="card" id="{{comment._id}}">
  <div class="card-block">
    <h4 class="card-title">{{comment.title}}</h4>
    <p class="card-text">{{comment.content}}</p>
    <button class="btn btn-link delete-comment" data-comment-id="{{comment._id}}" data-comment-reviewId="{{comment.reviewId}}" data-comment-movieId="{{movieId}}">
      Delete
    </button>
  </div>
</div>

